---
interface Props {
    href: string;
    text: string;
    width?: string;
    height?: string;
}

const {href, text, width, height} = Astro.props;
---


<a href={href} style={`${width ? `width: ${width};` : ''}${height ? `height: ${height};` : ''}`}>
    <span>{text}</span>
</a>


<style>
    a {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: .75rem 1.5rem;
        background-color: var(--surface-color);
        color: var(--text-main);
        border-radius: 20px;
        font-weight: 500;
        transition: background-color 0.3s ease;

        position: relative;
        z-index: 1;
        overflow: hidden;

        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2), 0 4px 8px rgba(0, 0, 0, 0.15);
    }


    a span {
        position: relative;
        z-index: 2;
    }

    a::before, a::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 110%;
        transform: translate(-50%, -50%);

        width: 0.75rem;
        height: 0.75rem;
        background-color: var(--primary-green);
        border-radius: 100%;

        z-index: 1;
        pointer-events: none;

        transition: left 600ms ease, width 500ms ease 600ms, height 500ms ease 600ms, background-color 200ms ease;
    }


    a::after {
        left: -10%;
    }


    a:hover:before {
        width: 200%;
        height: 500%;
        left: 50%;
    }


    a:hover:after {
        width: 200%;
        height: 500%;
        left: 50%;
    }

    a:active:before, a:active:after {
        background-color: var(--deep-green);
    }

</style>